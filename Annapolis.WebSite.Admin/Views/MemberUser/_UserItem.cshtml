@using Annapolis.WebSite.Admin.Extensions
@model MemberUser

<tr id='@Model.Id+ "_user"'>
     @using (Ajax.BeginForm("UserItem", "MemberUser", new AjaxOptions { UpdateTargetId = Model.Id + "_user", HttpMethod = "POST" }))
     {
         <td>@Html.DisplayFor(modelItem => Model.UserName)</td>
         <td>@Html.DisplayFor(modelItem => Model.RegisterEmail)</td>
         <td>@Html.DisplayFor(model => model.ContactEmail)</td>
         <td>@Html.DisplayFor(model => model.MemberRole.RoleName)</td>
         <td>@Html.DisplayFor(model => model.CreateDate)</td>
         <td>@Html.DisplayFor(model => model.LastLoginDate)</td>
         <td align="center">@Html.EditorFor(model => model.IsApproved)</td>
         <td align="center">@Html.EditorFor(model => model.IsLockedOut)</td>
          <td>@Html.AdminActionLink("Topics", "UserTopics", new { Id = Model.Id })</td>
         <td><input type="submit" value="Save" /></td>
         <td>@Html.HiddenFor(model => model.Id)</td>
     }
     <td>
            @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
            @Html.ActionLink("Details", "Details", new { id=Model.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=Model.Id })
     </td>
    
</tr>
